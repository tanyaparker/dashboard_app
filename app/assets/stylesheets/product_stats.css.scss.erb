body {
	background: #101010;
	color: #FFFFFF;
	font-family: "bebas-neue",sans-serif;
	font-style: normal;
	font-weight: 400;
}

.clear {
	clear: both;
}

#page_title {
	font-size: 80px;
	margin: 15px 50px 0 50px;
}


/* PRODUCT PAGE CSS */

.feature {
	font-size: 70px;
	margin: 0 50px 0 50px;
	padding: 0;
	text-transform: uppercase;
}

	.feature li {
	background: #272727;
	list-style: none;
	line-height: 100%;
	margin: 10px 0 10px 0;
	padding: 10px 192px 10px 20px;
	text-overflow: ellipsis;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-transition: all 0.1s ease-in-out;
	}

	.feature li.feat_accepted {
		background-color: #89d835;
	}

	.feature li.feat_delivered {
		background-color: #ffa121;
	}

	.feature li.feat_finished {
		background-color: #67c2cf;
	}

	.feature li.feat_rejected {
		background-color: #ec5742;
	}

	.feature li.feat_started {
		background-color: #272727;
	}

	li.bug {
		background: url("<%= asset_path('bug@4x.png') %>") no-repeat top right;
		background-size: 192px;
	}

	li.chore {
		background: url("<%= asset_path('chore@4x.png') %>") no-repeat top right;
		background-size: 192px;
	}

	li.feature {
		background: url("<%= asset_path('feature@4x.png') %>") no-repeat top right;
		background-size: 192px;
	}

	li.release {
		background: url("<%= asset_path('release@4x.png') %>") no-repeat top right;
		background-size: 192px;
	}

.feature li:hover {
	-webkit-transform: translate(20px, 0);
	-moz-transform: translate(20px, 0);
}

/* CAMPAIGN PAGE CSS */

.main_container {
	margin: 0 50px 0 50px;
	line-height: 80%;
}

ul.progress_container {
	font-size: 90px;
	list-style: none;
	margin: 0;
	padding: 0;
	text-transform: uppercase;
}

.progress_bg {
	background: #272727;
	margin: 10px 0 10px 0;
	padding: 10px 20px 0px 20px;
	position: relative;
	line-height: 80%;
	overflow: hidden;
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	z-index: 2;
}

.progress_title {
	z-index: 1;
}

.progress_bar {
	background: #ffa121;
	display: block;
	position: absolute;
	height: 100%;
	top: 0;
	left: 0;
	z-index: -1;
}

.progress_container li:hover {
	-webkit-transform: translate(20px, 0);
	-moz-transform: translate(20px, 0);
}